<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="proyecto2.mtsolutions.dao.base.BaImpuestoDAO">

    <sql id="sqlImpuesto">
        select
            id_impuesto idImpuesto ,
            descripcion ,
            porcentaje ,
            activo
        from ba_impuesto
    </sql>

    <select id="getLista" resultType="BaImpuestoDTO">
        <include refid="sqlImpuesto"/>
        limit #{cantidad} offset #{offset}
    </select>

    <select id="getListCount"  resultType="BigDecimal">
        select
            count(*)
        from ba_impuesto
        where activo = true
    </select>

    <select id="getById" parameterType="Map" resultType="BaImpuestoDTO">
        <include refid="sqlImpuesto"/>
        where id_impuesto = #{id}
    </select>

</mapper>