<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="proyecto2.mtsolutions.dao.base.StkCategoriaDAO">


    <sql id="sqlCategoria">
        select
            categoria categoria ,
            descripcion descripcion,
            estado activo
        from stk_categoria
    </sql>


    <select id="getStkCategoriaList" resultType="StkCategoriaDTO">
        <include refid="sqlCategoria"/>
        limit #{cantidad} offset #{offset}
    </select>

    <select id="getStkCategoriaListCount"  resultType="BigDecimal">
        select 
        count(*) 
        from stk_categoria;
    </select>
    <insert id="insertStkCategoria" parameterType="StkCategoriaDTO">
        INSERT INTO public.stk_categoria
        (
        categoria, 
        descripcion) 
        VALUES 
        (
        #{categoria}, 
        #{descripcion}); 
    </insert>

    <select id="getById" parameterType="String" resultType="StkCategoriaDTO">
        <include refid="sqlCategoria"/>
        where categoria = #{categoria}
    </select>

</mapper>